<% #JS TEMPLATES ################ %>

<% #Render one user %>

<script type="text/template" id="tpl-user-item">
	<li>
		<div class="circle">
			<p><%%= user_initials %></p>
		</div>
		<p class="status"><%%= user_status %></p>
	</li>
</script>

<% #Render one text item %>
<script type="text/template" id="tpl-text-item">
	<p>
		<%%= text_segment %>
	</p>
	<div class="imageDiv">	
		<%= image_tag "down_arrow.png", :class => "downvote_btn" %>
		<%= image_tag "up_arrow.png", :class=> "upvote_btn" %>
	</div>
</script>


